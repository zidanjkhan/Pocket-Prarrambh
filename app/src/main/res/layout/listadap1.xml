<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:background="@drawable/titlegradient"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#454040"
                android:layout_marginBottom="10dp"
                app:cardElevation="5dp"
                android:outlineSpotShadowColor="#03A9F4"
                android:outlineAmbientShadowColor="#03A9F4"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/sport1" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/card1"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:shadowColor="#202020"
                android:shadowRadius="20"
                android:text="TextView"
                android:textColor="#FF9800"
                android:textColorHint="#F57F17"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt2"
                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView"
                android:fontFamily="@font/aclonica"
                android:shadowColor="#202020"
                android:shadowRadius="20"
                android:text="TextView"
                android:textColor="#03A9F4"
                android:textColorHint="#F57F17"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_marginStart="0dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/card1"
                android:fontFamily="@font/aclonica"
                android:shadowColor="#202020"
                android:shadowRadius="20"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#03A9F4"
                android:textColorHint="#F57F17"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/card1"
                android:fontFamily="@font/aclonica"
                android:text="Entry Fee:"
                android:textColor="#FF9800"
                android:textSize="20sp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>